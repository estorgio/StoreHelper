<% include partials/header.ejs %>

<div class="container">

    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">

            <% include partials/flash %>

            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign Up to StoreHelper</h3>
                </div>
                <div class="panel-body">
                    <form action="/signup" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="firstname" placeholder="First name" autofocus >
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="lastname" placeholder="Last name" >
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="username" placeholder="Username" >
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password" >
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="passwordconf" placeholder="Confirm password" >
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

<% include partials/footer %>