<% include ../partials/header %>

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <% include ../partials/flash  %>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1><i class="fa fa-users" aria-hidden="true"></i> User Accounts</h1>
            <hr>
            <p>List of users and their accounts registered on the system. </p>

            <div class="action-buttons">
                <a href="/users/new" class="btn btn-primary">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Add Account
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                    <th>Username</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Type</th>
                    <th>Created</th>
                    <th>Last Login</th>
                    </thead>
                    <tbody>
                    <% users.forEach(function (user) { %>
                    <tr <% if (!user.enabled) { %> class="danger" <% } %>>
                        <td>
                            <a href="/users/<%= user.id %>">
                                <img src="<%= user.picture ? '/uploads/' + user.picture : '/assets/img/nopicture.png' %>"
                                     alt="<%= user.username %>"
                                      class="img-circle" style="width: 50px">
                                <%= user.username %>
                            </a>
                        </td>
                        <td><%= user.firstname %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.type %></td>
                        <td><%= moment(user.created).calendar(null, {sameElse: 'MMMM DD, YYYY hh:mm A'}) %></td>
                        <td><%= moment(user.last_login).calendar(null, {sameElse: 'MMMM DD, YYYY hh:mm A'}) %></td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>



</div>

<% include ../partials/footer %>