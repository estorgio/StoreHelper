<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1><i class="fa fa-user-plus" aria-hidden="true"></i> Add User Account</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <form action="/users" method="post">
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" name="user[firstname]" id="firstname" class="form-control" autofocus >
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text" name="user[lastname]" id="lastname" class="form-control">
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name="user[username]" id="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="user[password]" id="password" class="form-control">
                </div>
                <div class="form-group">
                    <label for="accountType">Account Type</label>
                    <select name="user[type]" id="accountType" class="form-control">
                        <option value="Unspecified">Select account type</option>
                        <option value="Cashier">Cashier</option>
                        <option value="Manager">Manager</option>
                        <option value="Administrator">Administrator</option>
                    </select>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <a href="/users" class="btn btn-default"><i class="fa fa-angle-double-left" aria-hidden="true"></i> Back</a>
            </form>
        </div>
    </div>

</div>

<% include ../partials/footer %>