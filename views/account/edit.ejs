<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                Edit Account Info</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form action="/account?_method=PUT" method="post">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/assets/img/nopicture.png" alt="Profile Picture" class="img-thumbnail profile-picture">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstname">First Name</label>
                            <input type="text" class="form-control" id="firstname" name="user[firstname]">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstname">Last Name</label>
                            <input type="text" class="form-control" id="lastname" name="user[lastname]">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <select name="user[gender]" id="gender" class="form-control">
                                <option name="Unspecified">Select gender</option>
                                <option name="Male">Male</option>
                                <option name="Female">Female</option>
                                <option name="Other">Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="birthdate">Birthdate</label>
                            <input type="date" class="form-control" id="birthdate" name="user[birthdate]">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="civil_status">Civil Status</label>
                            <select name="user[civil_status]" id="civil_status" class="form-control">
                                <option name="Unspecified">Select civil status</option>
                                <option>Single</option>
                                <option>Married</option>
                                <option>Divorced</option>
                                <option>Widowed</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="" class="form-control" id="phone" name="user[phone]">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="user[address]">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-primary">Update Info</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>