<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                Edit Account Info</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form action="/account?_method=PUT" method="post">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/assets/img/nopicture.png" alt="Profile Picture" class="img-thumbnail profile-picture">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstname">First Name</label>
                            <input type="text" class="form-control" id="firstname" name="user[firstname]" value="<%= user.firstname %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstname">Last Name</label>
                            <input type="text" class="form-control" id="lastname" name="user[lastname]" value="<%= user.lastname %>">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="gender">Gender</label>
                            <select name="user[gender]" id="gender" class="form-control">
                                <option value="Unspecified" <%= user.gender ? '' : 'selected'%>>Select gender</option>
                                <option value="Male" <%= user.gender === 'Male' ? 'selected' : ''%>>Male</option>
                                <option value="Female" <%= user.gender === 'Female' ? 'selected' : ''%>>Female</option>
                                <option value="Other" <%= user.gender === 'Other' ? 'selected' : ''%>>Other</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="birthdate">Birthdate</label>
                            <input type="date" class="form-control" id="birthdate" name="user[birthdate]"
                                   <% if (user.birthdate) { %>
                                   value="<%= moment(user.birthdate).format('YYYY-MM-DD') %>"
                                   <% } %>
                            >
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="civil_status">Civil Status</label>
                            <select name="user[civil_status]" id="civil_status" class="form-control">
                                <option value="Unspecified" <%= user.civil_status ? '' : 'selected' %>>Select civil status</option>
                                <option <%= user.civil_status === 'Single' ? 'selected' : '' %>>Single</option>
                                <option <%= user.civil_status === 'Married' ? 'selected' : '' %>>Married</option>
                                <option <%= user.civil_status === 'Divorced' ? 'selected' : '' %>>Divorced</option>
                                <option <%= user.civil_status === 'Widowed' ? 'selected' : '' %>>Widowed</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="" class="form-control" id="phone" name="user[phone]"
                                   value="<%= user.phone || '' %>">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="user[address]"
                                value="<%= user.address || '' %>">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">Update Info</button>
                        <a href="/account" class="btn btn-default">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>