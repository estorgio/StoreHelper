<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <h1><i class="fa fa-id-card-o" aria-hidden="true"></i> My Account</h1>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">


                    <div class="profile-container">
                        <div class="media">
                            <div class="media-left">
                                <a href="#">
                                    <img id="user_picture" class="media-object img-thumbnail profile-picture" src="/assets/img/nopicture.png" alt="Profile Picture">
                                </a>
                            </div>
                            <div class="media-body">
                                <div class="profile-header">
                                    <h1 class="profile-name" id="user_name">John Doe</h1>
                                    <p class="profile-subinfo" id="user_occupation">Administrator</p>
                                    <p class="profile-subinfo" id="user_company">Branch</p>
                                    <p class="profile-subinfo">@myusername</p>
                                </div>

                            </div>
                        </div>
                        <div class="profile-fields-container">
                            <div class="profile-fields">
                                <div class="profile-field">
                                    <div class="profile-field-name">Gender:</div>
                                    <div class="profile-field-info" id="user_gender">Male</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Birthdate:</div>
                                    <div class="profile-field-info" id="user_birthdate">January 1, 1999</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Civil Status:</div>
                                    <div class="profile-field-info" id="user_civilstatus">Married</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Address:</div>
                                    <div class="profile-field-info" id="user_address">Matina, Davao City</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Phone:</div>
                                    <div class="profile-field-info" id="user_phone">09123456789</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Account Status:</div>
                                    <div class="profile-field-info" id="user_gender">Active</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Account Created:</div>
                                    <div class="profile-field-info" id="user_gender">January 1, 2018</div>
                                </div>
                                <div class="profile-field">
                                    <div class="profile-field-name">Last Login:</div>
                                    <div class="profile-field-info" id="user_gender">January 1, 2018</div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>